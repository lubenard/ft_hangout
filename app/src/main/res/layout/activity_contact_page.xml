<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_help" />

    <TextView
        android:id="@+id/contact_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Name" />

    <TextView
        android:id="@+id/contact_detail_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact phone number" />

    <TextView
        android:id="@+id/contact_detail_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact email" />

    <TextView
        android:id="@+id/contact_detail_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact adress" />

    <TextView
        android:id="@+id/contact_detail_birthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact birthdate" />

</LinearLayout>